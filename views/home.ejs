            <!-- form to create task -->
        <form action="/create-task" method="POST">

            <table class="table" style="background-color:lightcyan;">
                <thead>
                  <tr class="table-active">
                    <th >DESCRIPTION</th>
                    <th >CATEGORY</th>
                    <th>DUE DATE</th>
                    <th ></th>
                  </tr>
                </thead>
            
            
                <tbody>
                    <tr>
                      <td> <input type="text" name="description"placeholder="What do you need to do?" required></input></th>
                      <td >  <select name="category" required>

                        <option>PERSONAL</option>
                        <option>WORK</option>
                        <option>SCHOOL</option>
                        <option>CLEANING</option>
                        <option>OTHER</option>

                    </select></th>
                      <td > <input type="date" name="date" required></th>
                        
                      <td ><i class="fas fa-plus-circle"></i><input type="submit"  class="btn btn-success"id="add" value="ADD A TASK"></th>
                    </tr>
                </tbody>
            
            </table>
                  
  </form>
    </section>
        <div>          
                <h1 align="center" style="background-color:cyan;">   
                    <i class="fas fa-tasks"></i>      
                    Tasks List
                </h1>

                <form action="/delete-task" method="GET">
                    <table class="table" style="background-color:lightcyan;">
                        <thead style="background-color:lightcyan;">
                            <tr style="background-color:lightsteelblue;">
                              <th>Select</th>
                              <th>Task</th>
                              <th>Category</th>
                              <th>Due Date</th>
                            </tr>
                          </thead>
                        <% for(let i of task) { %>
                            
<tr>
                                <td><input type="checkbox" name="<%= i._id %>" ></td>
                                <td><p id="task-description"><%= i.description %></td>
                                <td><p id="task-category">: <%= i.category %></td>
                                <td><p id="due-date">: <%= i.date %></p></td>
</tr>
                    
                        <% } %>
                            
                

                           
</table>
<div  align = "center"><i class="fas fa-minus-circle"></i><input type="submit" class="btn btn-danger" value="DELETE TASK">
                </div>></form>

        
            </div>
        
